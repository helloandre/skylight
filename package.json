{
  "name": "skylight",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "start": "cross-env NODE_ENV=production npm run wrangler",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development npm run wrangler",
    "wrangler": "wrangler pages dev ./public --compatibility-date=2023-05-11 --compatibility-flag=nodejs_compat --kv KV",
    "typecheck": "tsc",
    "deploy": "npm run build && wrangler pages deploy ./public"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.18.0",
    "@remix-run/cloudflare-pages": "^1.18.0",
    "@remix-run/css-bundle": "^1.18.0",
    "@remix-run/react": "^1.18.0",
    "@types/lodash-es": "^4.17.7",
    "@types/luxon": "^3.3.0",
    "cross-env": "^7.0.3",
    "isbot": "^3.6.8",
    "lodash-es": "^4.17.21",
    "luxon": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "skylight-theme-compat-ghost": "^0.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.19.0",
    "@remix-run/dev": "^1.18.0",
    "@remix-run/eslint-config": "^1.18.0",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "daisyui": "^3.1.6",
    "eslint": "^8.38.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "wrangler": "^3.1.1"
  },
  "engines": {
    "node": ">=16.13"
  }
}
